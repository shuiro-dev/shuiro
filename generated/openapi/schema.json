{
  "info": {
    "license": {
      "name": ""
    },
    "title": "Problem and Submission API",
    "version": "0.1.0"
  },
  "openapi": "3.1.0",
  "components": {
    "schemas": {
      "Language": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "version": {
            "type": "string"
          }
        },
        "required": [
          "name",
          "version"
        ]
      },
      "TestCase": {
        "type": "object",
        "properties": {
          "input": {
            "type": "string"
          },
          "output": {
            "type": "string"
          }
        },
        "required": [
          "input",
          "output"
        ]
      },
      "Problem": {
        "type": "object",
        "properties": {
          "body": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "supported_languages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Language"
            }
          },
          "test_cases": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TestCase"
            }
          },
          "title": {
            "type": "string"
          }
        },
        "required": [
          "body",
          "id",
          "supported_languages",
          "test_cases",
          "title"
        ]
      },
      "ProblemCreate": {
        "type": "object",
        "properties": {
          "body": {
            "type": "string"
          },
          "supported_languages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Language"
            }
          },
          "test_cases": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TestCase"
            }
          },
          "title": {
            "type": "string"
          }
        },
        "required": [
          "body",
          "supported_languages",
          "test_cases",
          "title"
        ]
      },
      "ProblemUpdate": {
        "type": "object",
        "properties": {
          "body": {
            "type": "string"
          },
          "supported_languages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Language"
            }
          },
          "test_cases": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TestCase"
            }
          },
          "title": {
            "type": "string"
          }
        }
      },
      "SubmissionStatus": {
        "type": "string",
        "enum": [
          "Accepted",
          "WrongAnswer",
          "RuntimeError",
          "CompileError"
        ]
      },
      "SubmissionResult": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/SubmissionStatus"
          }
        },
        "required": [
          "status"
        ]
      },
      "TestStatus": {
        "type": "string",
        "enum": [
          "Passed",
          "Failed"
        ]
      },
      "TestResult": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/TestStatus"
          },
          "test_case_id": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "status",
          "test_case_id"
        ]
      },
      "Submission": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "minimum": 0
          },
          "language": {
            "$ref": "#/components/schemas/Language"
          },
          "problem_id": {
            "type": "integer",
            "minimum": 0
          },
          "result": {
            "$ref": "#/components/schemas/SubmissionResult"
          },
          "student_id": {
            "type": "integer",
            "minimum": 0
          },
          "test_results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TestResult"
            }
          }
        },
        "required": [
          "code",
          "id",
          "language",
          "problem_id",
          "result",
          "student_id",
          "test_results"
        ]
      },
      "SubmissionCreate": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "language": {
            "$ref": "#/components/schemas/Language"
          },
          "problem_id": {
            "type": "integer",
            "minimum": 0
          }
        },
        "required": [
          "code",
          "language",
          "problem_id"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {
    "/api/problems": {
      "get": {
        "operationId": "getProblems",
        "summary": "問題の一覧を取得する",
        "tags": [
          "problems"
        ],
        "responses": {
          "200": {
            "description": "問題の一覧",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Problem"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createProblem",
        "summary": "新しい問題を作成する",
        "tags": [
          "problems"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProblemCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "作成された問題",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          }
        }
      }
    },
    "/api/problems/{problemId}": {
      "get": {
        "operationId": "getProblemById",
        "summary": "問題の詳細を取得する",
        "tags": [
          "problems"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "problemId"
          }
        ],
        "responses": {
          "200": {
            "description": "問題の詳細",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "404": {
            "description": "指定されたIDの問題が見つかりません"
          }
        }
      },
      "put": {
        "operationId": "updateProblem",
        "summary": "問題を更新する",
        "tags": [
          "problems"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "problemId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProblemUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新された問題",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Problem"
                }
              }
            }
          },
          "404": {
            "description": "指定されたIDの問題が見つかりません"
          }
        }
      },
      "delete": {
        "operationId": "deleteProblem",
        "summary": "問題を削除する",
        "tags": [
          "problems"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "problemId"
          }
        ],
        "responses": {
          "204": {
            "description": "問題が削除されました"
          },
          "404": {
            "description": "指定されたIDの問題が見つかりません"
          }
        }
      }
    },
    "/api/problems/{problemId}/submit": {
      "post": {
        "operationId": "submitProgram",
        "summary": "問題に対してプログラムを提出する",
        "tags": [
          "problems"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "problemId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SubmissionCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "提出されたプログラム",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Submission"
                }
              }
            }
          },
          "404": {
            "description": "指定されたIDの問題が見つかりません"
          }
        }
      }
    },
    "/api/problems/{problemId}/submissions": {
      "get": {
        "operationId": "getSubmissionsByProblemId",
        "summary": "問題に対する提出一覧を取得する",
        "tags": [
          "problems"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "problemId"
          }
        ],
        "responses": {
          "200": {
            "description": "提出一覧",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Submission"
                  }
                }
              }
            }
          },
          "404": {
            "description": "指定されたIDの問題が見つかりません"
          }
        }
      }
    },
    "/api/submissions": {
      "get": {
        "operationId": "getSubmissions",
        "summary": "提出一覧を取得する",
        "tags": [
          "submissions"
        ],
        "responses": {
          "200": {
            "description": "提出一覧",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Submission"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/submissions/{submissionId}": {
      "get": {
        "operationId": "getSubmissionById",
        "summary": "提出の詳細を取得する",
        "tags": [
          "submissions"
        ],
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "example": 1
            },
            "required": true,
            "in": "path",
            "name": "submissionId"
          }
        ],
        "responses": {
          "200": {
            "description": "提出の詳細",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Submission"
                }
              }
            }
          },
          "404": {
            "description": "指定されたIDの提出が見つかりません"
          }
        }
      }
    }
  },
  "webhooks": {}
}