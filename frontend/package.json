{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others-on-fail --prefix-colors=blue,green,magenta bun:dev:*",
    "dev:frontend": "next dev",
    "dev:backend": "cd ../backend && cargo run",
    "dev:mock": "prism mock ../generated/openapi/schema.json",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --ignore-path .gitignore --check .",
    "format:write": "prettier --ignore-path .gitignore --write ."
  },
  "dependencies": {
    "next": "14.2.14",
    "openapi-fetch": "^0.12.2",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@stoplight/prism-cli": "5.10.0",
    "@types/node": "22.7.5",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.3.0",
    "concurrently": "9.0.1",
    "eslint": "8.57.1",
    "eslint-config-next": "14.2.14",
    "openapi-typescript": "7.4.1",
    "postcss": "8.4.47",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.3",
    "openapi": "workspace:*"
  }
}
